<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h5 class="title is-5">Single Path Computed</h5>
        <div class="content">
          {{#each-in singleGroup as |category items|}}
            <b>{{category}}</b>
            <ul>
              {{#each items as |item|}}
                <li>{{item.name}}</li>
              {{/each}}
            </ul>
          {{/each-in}}
        </div>
      </div>
      <div class="column">
        <h5 class="title is-5">Single Path Helper</h5>
        <div class="content">
          {{#each-in (group-by-path single "category" (action "director")) as |category items|}}
            <b>{{category}}</b>
            <ul>
              {{#each items as |item|}}
                <li>{{item.name}}</li>
              {{/each}}
            </ul>
          {{/each-in}}
        </div>
      </div>

      <div class="column">
        <h5 class="title is-5">Nested Path Computed</h5>
        <div class="content">
          {{#each-in doubleGroup as |category items|}}
            <b>{{category}}</b>
            <ul>
              {{#each items as |item|}}
                <li>{{item.name}}</li>
              {{/each}}
            </ul>
          {{/each-in}}
        </div>
      </div>
      <div class="column">
        <h5 class="title is-5">Nested Path Helper</h5>
        <div class="content">
          {{#each-in (group-by-path double "category.type") as |category items|}}
            <b>{{category}}</b>
            <ul>
              {{#each items as |item|}}
                <li>{{item.name}}</li>
              {{/each}}
            </ul>
          {{/each-in}}
        </div>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link" {{action "addSingleItem"}}>Add single item</button>
      </div>
      <div class="control">
        <button class="button is-link" {{action "addDoubleItem"}}>Add double item</button>
      </div>
      <div class="control">
        <button class="button is-text"{{action "editItem"}}>Edit double item</button>
      </div>
    </div>
  </div>
</section>